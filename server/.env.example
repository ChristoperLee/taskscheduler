# Database Configuration
# Local database URL
DATABASE_URL=postgresql://username:password@localhost:5432/taskscheduler

# Production database URL (Railway or other hosting)
# Get this from your Railway dashboard under Variables
PRODUCTION_DATABASE_URL=postgresql://postgres:xxx@xxx.railway.app:5432/railway

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (frontend URL)
CLIENT_URL=http://localhost:3000

# Admin Setup (optional - for initial admin creation)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123
ADMIN_USERNAME=admin