# Production Environment Variables
NODE_ENV=production
PORT=5001

# Database - Update with your production database credentials
DATABASE_URL=postgresql://taskscheduler_user:your-secure-password@localhost:5432/taskscheduler_prod
# Or use individual variables
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taskscheduler_prod
DB_USER=taskscheduler_user
DB_PASSWORD=your-secure-password

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-very-secure-jwt-secret-here

# CORS - Update with your production domain
CORS_ORIGIN=https://yourdomain.com

# Optional: Email configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Optional: Redis for session/cache
REDIS_URL=redis://localhost:6379

# Optional: Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100